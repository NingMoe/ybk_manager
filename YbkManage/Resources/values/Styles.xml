<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!-- 默认样式 -->
	<style name="appbasetheme" parent="@android:style/Theme.Material.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item> -->   
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowBackground">@android:color/white</item>
	</style>

    <!-- 顶部状态栏的样式 -->
    <style name="actionbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:elevation">3dp</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingEnd">15sp</item>
    </style>
    
    <!-- 设置界面的TextView样式 -->
    <style name="mine_textview">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <!-- 设置界面的TextView样式 -->
    <style name="mine_textview_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecond</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 默认按钮样式 -->
    <!--<style name="CustomButton" parent="Theme.Material.Light">
        <item name="colorButtonNormal">#ffffff</item>
        <item name="colorControlHighlight">#111111</item>
    </style>-->
</resources>